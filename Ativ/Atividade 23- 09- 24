cont,n1,menor:inteiro

Inicio

 escreva("digite um numero.")
 leia(menor)
 repita
 escreva("digite um numero")
  leia(n1)
 se n1 < menor entao
 menor <- n1
 fimse
 cont<- cont+1
 ate cont=9
 escreva(menor)
