n1,n2,soma:real
opcao:caracter
Inicio
 repita
 escreva("digite primeiro nun.")
 leia(n1)
 escreva("digite segundo nun.")
 leia(n2)
 soma<- n1+n2
 escreva("A soma é:", soma)
 escreva("deseja continuar?")
 leia(opcao)
ate (opcao="nao")
Fimalgoritmo


